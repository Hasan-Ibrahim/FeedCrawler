<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed Crawler For Donald Trump</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img src="~/Content/images/trump.jpg" width="50" height="50" style="border-radius: 50%; margin-right: 10px;" />
                Trump's Feed
            </a>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
                <li><a href="#"><h4>It's All About Donald J. Trump</h4></a></li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content" data-ng-app="feedCrawlerModule">
        @RenderBody()
        <hr />
        <footer>
            <p><i>Md Hasan Ibrahim &copy; @DateTime.Now.Year - Feed Crawler For Donald Trump</i> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

    <script src="~/Scripts/app/feedCrawlerModule.js"></script>
    <script src="~/Scripts/app/services/cnnFeedService.js"></script>
    <script src="~/Scripts/app/services/twitterFeedService.js"></script>
    <script src="~/Scripts/app/controllers/cnnFeedController.js"></script>
    <script src="~/Scripts/app/controllers/twitterFeedController.js"></script>
    <script src="~/Scripts/app/controllers/cnnNewsViewerModalController.js"></script>
    <script src="~/Scripts/app/controllers/twitterTweetViewerModalController.js"></script>
    <script src="~/Scripts/app/services/localStorageService.js"></script>
<script src="~/Scripts/app/controllers/savedFeedController.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
